<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.0-1" author="legion">
        <createTable tableName="institution_data">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true" unique="true" primaryKeyName="institution_data_pk"
                             uniqueConstraintName="institution_data_id_uq"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="city" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="street" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="street_number" type="varchar(10)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="local_number" type="varchar(10)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="phone_number" type="varchar(20)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="creation_date" type="timestamptz">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="update_date" type="timestamptz">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="removed" type="boolean">
                <constraints nullable="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>